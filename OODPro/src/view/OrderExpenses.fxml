<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OrderHistoryController">
    <children>
        <ImageView>
            <image>
                <Image url="@../images/OrderHistory.jpg" />
            </image>
        </ImageView>

        <BarChart fx:id="barChart" layoutX="79.0" layoutY="177.0" verticalGridLinesVisible="false">
            <xAxis>
                <CategoryAxis label="Date  Of purchase" side="BOTTOM" fx:id="xAxis" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Order Value" side="LEFT" />
            </yAxis>
        </BarChart>

        <Button layoutX="79.0" layoutY="44.0" mnemonicParsing="false" onAction="#goToCatalog" prefHeight="26.0" prefWidth="107.0" text="Home">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font></Button>
    </children>
</AnchorPane>
