      <Label fx:id="errorPassword" alignment="BASELINE_CENTER" layoutX="655.0" layoutY="439.0" text="Password cannot be empty" textFill="#dd0b0b" visible="false">
         <font>
            <Font name="Calibri Italic" size="14.0" />
         </font></Label>
